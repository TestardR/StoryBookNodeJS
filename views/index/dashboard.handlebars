<h1>Bienvenue {{user.firstName}}</h1>
<h4>Vos Histoires</h4>
{{#if stories}}
<table class="striped">
    <thead>
        <tr>
            <th>Titre</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each stories}}
        <tr>
            <td><a href="/stories/show/{{id}}">{{title}}</a></td>
            <td>{{formatDate data 'DD/MM/YY'}}</td>
            <td><span class="dash-status">{{status}}</span></td>
            <td><a class="btn left-align" href="/stories/edit/{{id}}">Editer <i class="fa fa-pencil-alt"></i> </a>

                <form action="/stories/{{id}}?_method=DELETE" method="post" id="delete-form">
                    <input type="hidden" name="_method" value="DELETE">
                    <button class="btn red" type="submit">Effacer <i class="fa fa-times"></i></button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>Vous n'avez pas encore ajout√© d'histoires</p>
{{/if}}